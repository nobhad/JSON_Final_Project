<!-- File: views/booking/edit.ejs 
 Purpose: To Edit existing bookings -->
<h2>Edit Booking</h2>

<form action="/booking/edit/<%= booking._id %>" method="POST">
  <label for="serviceType">Service:</label>
  <input type="text" name="serviceType" id="serviceType" value="<%= booking.serviceType %>" required><br />

  <label for="preferredDate">Preferred Date:</label>
  <input type="date" name="preferredDate" id="preferredDate" value="<%= booking.preferredDate.toISOString().split('T')[0] %>" required><br />

  <label for="notes">Notes:</label>
  <textarea name="notes" id="notes" rows="4"><%= booking.notes || '' %></textarea><br />

  <button type="submit">Update Booking</button>
</form>
