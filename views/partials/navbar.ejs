<!--
  File: /views/partials/navbar.ejs
  Purpose: Site navigation bar with links to main pages
-->

<nav class="navbar" role="navigation" aria-label="Main navigation">
  <div class="nav-container">

    <a href="/" class="nav-logo" tabindex="1">No Bhad Dogs</a>

    <button class="nav-toggle" aria-label="Toggle navigation" aria-expanded="false" tabindex="2">
      <span class="hamburger"></span>
    </button>

    <ul class="nav-menu">
      <% if (user) { %>
        <!-- greeting replaces Home link inside nav menu -->
        <li>
          <a href="/dashboard" class="nav-user-name nav-link" title="Go to your dashboard" tabindex="3">
            Hello, <%= user.firstName %>
          </a>
        </li>
      <% } else { %>
        <!-- show Home link here when no user -->
        <li>
          <a href="/" class="nav-user-name nav-link" tabindex="3">Home</a>
        </li>
      <% } %>

      <li><a href="/about" class="nav-link" tabindex="4">About</a></li>
      <li><a href="/halloffame" class="nav-link" tabindex="5">Hall of Fame</a></li>
      <li><a href="/testimonials" class="nav-link" tabindex="6">Testimonials</a></li>
      <li><a href="/contact" class="nav-link" tabindex="7">Contact</a></li>

      <% if (user) { %>
        <li><a href="/auth/logout" class="nav-link" tabindex="8">Logout</a></li>
      <% } else { %>
        <li><a href="/auth/login" class="nav-link" tabindex="8">Login</a></li>
      <% } %>
    </ul>
  </div>
</nav>
