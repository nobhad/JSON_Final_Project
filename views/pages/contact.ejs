<!-- 
  File: /views/pages/contact.ejs
  Purpose: Contact page with contact info, message form, and login prompt if not logged in
  Notes:
  - This view is rendered inside the main layout (no full HTML wrapper here)
  - Uses 'user' and 'messages' objects passed from the controller
-->

<main>
  <!-- Larger logo -->
  <div style="text-align: center;">
    <img src="/img/logo.png" alt="No Bhad Dogs Logo" style="max-width: 200px; height: auto; margin-bottom: 1em;" />
  </div>

  <h1>Contact Us</h1>

  <p>Reach us at: <strong>contact@nobhad.com</strong> or call <strong>555-123-4567</strong></p>

  <h2>Send us a message</h2>

  <% if (flash && flash.error && flash.error.length > 0) { %>
    <div style="background-color: #c0392b; color: white; padding: 10px; border-radius: 5px; margin-bottom: 1em;">
      <%= flash.error[0] %>
    </div>
  <% } %>
  
  <% if (flash && flash.success && flash.success.length > 0) { %>
    <div style="background-color: #27ae60; color: white; padding: 10px; border-radius: 5px; margin-bottom: 1em;">
      <%= flash.success[0] %>
    </div>
  <% } %>

  <form method="POST" action="/contact" novalidate>
    <label for="name">Name:</label><br />
    <input type="text" id="name" name="name" required pattern="^[^<>]*$" title="Name cannot contain < or > characters" /><br /><br />
  
    <label for="email">Email:</label><br />
    <input type="email" id="email" name="email" required /><br /><br />
  
    <label for="message">Message:</label><br />
    <textarea id="message" name="message" rows="5" required pattern="^[^<>]*$" title="Message cannot contain < or > characters"></textarea><br /><br />
  
    <button type="submit">Send</button>
  </form>
</main>
