<!-- 
  File: /views/pages/contact.ejs
  Purpose: Contact page with contact info, message form, and login prompt if not logged in
  Notes:
  - This view is rendered inside the main layout (no full HTML wrapper here)
  - Uses 'user' and 'messages' objects passed from the controller
-->

<h1>Contact Us</h1>

<p>Reach us at: <strong>contact@nobhad.com</strong> or call <strong>555-123-4567</strong></p>

<% if (!user) { %>
  <p>
    <a href="/login">Log in to book a service</a>
  </p>
<% } %>

<h2>Send us a message</h2>

<% if (messages && messages.error) { %>
  <div style="color: red;"><%= messages.error %></div>
<% } %>

<% if (messages && messages.success) { %>
  <div style="color: green;"><%= messages.success %></div>
<% } %>

<form method="POST" action="/contact">
  <label for="name">Name:</label><br />
  <input type="text" id="name" name="name" required /><br /><br />

  <label for="email">Email:</label><br />
  <input type="email" id="email" name="email" required /><br /><br />

  <label for="message">Message:</label><br />
  <textarea id="message" name="message" rows="5" required></textarea><br /><br />

  <button type="submit">Send</button>
</form>
