<h1 class="text-center my-4">No Bhad Dogs Hall of Fame üêæ</h1>

<% if (dogs && dogs.length > 0) { %>
  <div class="dog-grid">
    <% dogs.forEach(dog => { %>
      <div class="dog-card">
        <img 
          src="<%= dog.image || '/img/placeholder.png' %>" 
          alt="Photo of <%= dog.name %>" 
          class="dog-image"
        />
        <h2 class="dog-name"><%= dog.name %></h2>
        <p class="dog-breed"><%= dog.breed %></p>
      </div>
    <% }) %>
  </div>
<% } else { %>
  <p>No dogs in the hall of fame yet. Check back soon!</p>
<% } %>

<style>
  .dog-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 1.5rem;
  }

  .dog-card {
    background-color: #f9f9f9;
    border-radius: 8px;
    padding: 1rem;
    text-align: center;
    box-shadow: 0 2px 6px rgba(0,0,0,0.1);
  }

  .dog-image {
    width: 100%;
    height: 180px;
    object-fit: cover;
    border-radius: 6px;
  }

  .dog-name {
    margin: 0.75rem 0 0.25rem;
    font-size: 1.25rem;
  }

  .dog-breed {
    color: #666;
    font-style: italic;
    margin: 0;
  }
</style>
